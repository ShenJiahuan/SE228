<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.shenjiahuan.eBook.entity.Order" table="order" schema="ebook">
        <composite-id mapped="true" class="com.shenjiahuan.eBook.entity.OrderPK">
            <key-property name="uid" column="uid"/>
            <key-property name="bookId" column="book_id"/>
            <key-property name="addTime" column="add_time"/>
        </composite-id>
        <property name="count" column="count"/>
        <property name="purchaseTime" column="purchase_time"/>
        <property name="purchased" column="purchased"/>
    </class>
</hibernate-mapping>
