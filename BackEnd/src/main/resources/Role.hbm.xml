<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.shenjiahuan.eBook.entity.Role" table="role" schema="ebook">
        <composite-id mapped="true" class="com.shenjiahuan.eBook.entity.RolePK">
            <key-property name="uid" column="uid"/>
            <key-property name="role" column="role"/>
        </composite-id>
    </class>
</hibernate-mapping>
