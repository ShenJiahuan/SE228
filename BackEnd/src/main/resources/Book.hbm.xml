<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.shenjiahuan.eBook.entity.Book" table="book" schema="ebook">
        <id name="bookId" column="book_id"/>
        <property name="title" column="title"/>
        <property name="author" column="author"/>
        <property name="publisher" column="publisher"/>
        <property name="publishDate" column="publish_date"/>
        <property name="pages" column="pages"/>
        <property name="price" column="price"/>
        <property name="decoration" column="decoration"/>
        <property name="isbn" column="ISBN"/>
        <property name="img" column="img"/>
        <property name="hot" column="hot"/>
        <property name="score" column="score"/>
        <property name="bookDesc" column="book_desc"/>
        <property name="originalName" column="original_name"/>
        <property name="remain" column="remain"/>
    </class>
</hibernate-mapping>
